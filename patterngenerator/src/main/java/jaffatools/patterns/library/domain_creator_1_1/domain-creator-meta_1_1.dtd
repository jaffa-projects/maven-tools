<?xml version="1.0" encoding="US-ASCII"?>

<!-- This dtd is used for validating the Meta files for generating the various domain object files  -->

<!ELEMENT Root (DomainObject,DomainPackage,DatabaseTable,DomainInfo?,MappingPackage,PatternTemplate,DeleteDomainObject?,DeleteDomainPackage?,Description?,LabelToken?,FlexDomainInfo?,Lockable?,Distributable?,Fields,Relationships?)>
<!ELEMENT DomainObject (#PCDATA)>
<!ELEMENT DomainPackage (#PCDATA)>
<!ELEMENT DatabaseTable (#PCDATA)>
<!ELEMENT DomainInfo (#PCDATA)> 
<!ELEMENT MappingPackage (#PCDATA)>
<!ELEMENT PatternTemplate (#PCDATA)>
<!ELEMENT DeleteDomainObject (#PCDATA)>
<!ELEMENT DeleteDomainPackage (#PCDATA)>
<!ELEMENT Description (#PCDATA)>
<!ELEMENT LabelToken (#PCDATA)>
<!ELEMENT FlexDomainInfo (#PCDATA)> <!-- Possible values are true, false -->
<!ELEMENT Lockable (#PCDATA)> <!-- Possible values are true, false -->
<!ELEMENT Distributable (#PCDATA)>

<!ELEMENT Fields (Field+)>
<!ELEMENT Field (Name,DataType,DatabaseFieldName,DatabaseDataType,Rpad?,PrimaryKey?,AutoGenerated?,DatabaseSequence?,Description?,LabelToken?,Mandatory?,Width?,IntSize?,FracSize?,MinValue?,MaxValue?,Layout?,Pattern?,CaseType?,Ignore?,StampType?,Comment?)>
<!ELEMENT Name (#PCDATA)>
<!ELEMENT DataType (#PCDATA)>
<!ELEMENT DatabaseFieldName (#PCDATA)>
<!ELEMENT DatabaseDataType (#PCDATA)>
<!ELEMENT Rpad (#PCDATA)>
<!ELEMENT PrimaryKey (#PCDATA)>
<!ELEMENT AutoGenerated (#PCDATA)>
<!ELEMENT DatabaseSequence (#PCDATA)>
<!ELEMENT Mandatory (#PCDATA)>
<!ELEMENT Width (#PCDATA)>
<!ELEMENT IntSize (#PCDATA)>
<!ELEMENT FracSize (#PCDATA)>
<!ELEMENT MinValue (#PCDATA)>
<!ELEMENT MaxValue (#PCDATA)>
<!ELEMENT Layout (#PCDATA)>
<!ELEMENT Pattern (#PCDATA)>
<!ELEMENT CaseType (#PCDATA)>
<!ELEMENT Ignore (#PCDATA)>
<!ELEMENT StampType (#PCDATA)> <!-- Possible values are CreatedUserId, CreatedDateTime, LastUpdatedUserId or LastUpdatedDateTime -->
<!ELEMENT Comment EMPTY>
<!ATTLIST Comment Style (plain|lifo|fifo) "plain" >

<!ELEMENT Relationships (Relationship+)>
<!-- The 'Name', if not specified, will be defaulted to the value of 'ToDomainObject' -->
<!ELEMENT Relationship (Name?,ToDomainObject,ToDomainPackage,FromCardinality,ToCardinality,Type,FromFields,ToFields)>
<!ELEMENT ToDomainObject (#PCDATA)>
<!ELEMENT ToDomainPackage (#PCDATA)>
<!ELEMENT FromCardinality (#PCDATA)>
<!ELEMENT ToCardinality (#PCDATA)>
<!ELEMENT Type (#PCDATA)>
<!ELEMENT FromFields (RelationshipField+)>
<!ELEMENT ToFields (RelationshipField+)>
<!ELEMENT RelationshipField (Name)>
