<?xml version="1.0" encoding="US-ASCII"?>

<!-- This dtd is used for validating the Meta files for generating the various domain object files  -->

<!ELEMENT Root (DomainObject,DomainPackage,DatabaseTable,MappingPackage,PatternTemplate,Description?,LabelToken?,Fields,Relationships?)>
<!ELEMENT DomainObject (#PCDATA)>
<!ELEMENT DomainPackage (#PCDATA)>
<!ELEMENT DatabaseTable (#PCDATA)>
<!ELEMENT MappingPackage (#PCDATA)>
<!ELEMENT PatternTemplate (#PCDATA)>
<!ELEMENT Description (#PCDATA)>
<!ELEMENT LabelToken (#PCDATA)>

<!ELEMENT Fields (Field+)>
<!ELEMENT Field (Name,DataType,DatabaseFieldName,DatabaseDataType,PrimaryKey?,AutoGenerated?,Description?,LabelToken?,Mandatory?,Width?,IntSize?,FracSize?,MinValue?,MaxValue?,Layout?,Pattern?,CaseType?,Ignore?)>
<!ELEMENT Name (#PCDATA)>
<!ELEMENT DataType (#PCDATA)>
<!ELEMENT DatabaseFieldName (#PCDATA)>
